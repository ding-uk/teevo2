<% @links.each do |link| %>
  <div class="link">
    <h2>
      <%= link_to link.title, link %><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.email %></small>
    </h2>

  <div class="button"
    <a class="btn" href="<%= link.url %>">Visit Links</a>
    <%= link_to like_link_path(link), method: :put, class:"btn" do %>
      <span class="chevron-up"</span>
      Upvote
      <%= link.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_link_path(link), method: :put, class: "btn" do %>
      <span class="chevron-down">
        Downvote
      <%= link.get_downvotes.size %>
    <% end %>
  </div>


  </div>
<% end %>
